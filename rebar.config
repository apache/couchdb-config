{deps, [
    {couch_log, ".*",
        {git, "https://git-wip-us.apache.org/repos/asf/couchdb-couch-log.git",
        {branch, "master"}}}
]}.
{erl_opts, [{src_dirs, ["src", "test"]},
            {inlcude, ["inlcude"]},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
%            warn_missing_spec,
            debug_info]}.
{eunit_opts, [verbose]}.
{xref_warnings, true}.
{xref_checks, [undefined_function_calls, locals_not_used, deprecated_function_calls]}.
